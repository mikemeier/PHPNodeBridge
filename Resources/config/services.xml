<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <parameters>
        <parameter key="mikemeier_php_node_bridge.config" type="collection">
            <parameter key="socketIoClientUri">http://node.local:8080/socket.io/socket.io.js</parameter>
            <parameter key="socketIoServerUri">http://node.local:8080</parameter>
            <parameter key="socketIoApiTokenName">demo</parameter>
            <parameter key="socketIoClientToken">client</parameter>
            <parameter key="socketIoServerToken">server</parameter>
            <parameter key="eventNamePrefix">mikemeier_php_node_bridge</parameter>
        </parameter>
        <parameter key="mikemeier_php_node_bridge.encryptionsalt">mysalt</parameter>
        <parameter key="mikemeier_php_node_bridge.store">%kernel.root_dir%/cache/phpnodebridge/userstore.txt</parameter>
    </parameters>

    <services>
        <service id="mikemeier_php_node_bridge.config" class="mikemeier\PHPNodeBridge\Service\Config">
            <argument>%mikemeier_php_node_bridge.config%</argument>
        </service>

        <service id="mikemeier_php_node_bridge.store" class="mikemeier\PHPNodeBridge\Service\Store">
            <argument>%mikemeier_php_node_bridge.store%</argument>
        </service>

        <service id="mikemeier_php_node_bridge.transport" class="mikemeier\PHPNodeBridge\Service\Transport">
            <argument type="service" id="mikemeier_php_node_bridge.config" />
        </service>

        <service id="mikemeier_php_node_bridge.usercontainer" class="mikemeier\PHPNodeBridge\Service\UserContainer">
            <argument type="service" id="mikemeier_php_node_bridge.store" />
        </service>

        <service id="mikemeier_php_node_bridge.bridge" class="mikemeier\PHPNodeBridge\Service\Bridge">
            <argument type="service" id="mikemeier_php_node_bridge.config" />
            <argument type="service" id="mikemeier_php_node_bridge.usercontainer" />
            <argument type="service" id="mikemeier_php_node_bridge.transport" />
            <argument type="service" id="mikemeier_php_node_bridge.identificationstrategy" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="mikemeier_php_node_bridge.encryption" class="mikemeier\PHPNodeBridge\Encryption\Adapter\McryptAdapter" />

        <service id="mikemeier_php_node_bridge.identificationstrategy" class="mikemeier\PHPNodeBridge\Identification\IdentificationStrategy">
            <argument type="service" id="session" />
            <argument type="service" id="mikemeier_php_node_bridge.encryption" />
            <argument>%mikemeier_php_node_bridge.encryptionsalt%</argument>
        </service>

        <service id="mikemeier_php_node_bridge.twigextension" class="mikemeier\PHPNodeBridge\Twig\TwigExtension">
            <argument type="service" id="mikemeier_php_node_bridge.bridge" />
            <argument type="service" id="mikemeier_php_node_bridge.identificationstrategy" />
            <tag name="twig.extension" />
        </service>
    </services>

</container>